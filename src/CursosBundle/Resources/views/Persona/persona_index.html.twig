{% extends "CursosBundle::layout.html.twig" %}

{% block content %}
	<h3> Perfil de Persona</h3>
	<hr/>
	<div class="col-lg-6">
		{% for message in app.session.flashbag().get('status') %}
			<div class="alert alert-success"> {{ message }} </div>
		{% endfor %}
		<table class="table table-hover table-bordered">
			<tr>
				<th style="width: 10%">Nombre</th>
				<td>{{ persona.nombre }}</td>
			</tr>
			<tr>
				<th style="width: 10%">Apellido</th>
				<td>{{ persona.apellido }}</td>
			</tr>
			<tr>
				<th style="width: 10%">Dirección</th>
				<td>{{ persona.direccion }}</td>
			</tr>
			<tr>
				<th style="width: 10%">Telefono</th>
				<td>
					{% for telefono in telefonos %}
						<table class="col-lg-12">
							<tr><td>{{ telefono.numero }}</td>
							<td style="width: 5%">
								<a href="{{ path("telefono_delete", {"id":telefono.id}) }}" data-toggle="tooltip" title="Eliminar Número" class="glyphicon glyphicon-remove" style="font-size:15px;"></a>
							</td></tr>
						</table>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th style="width: 10%">Apodo</th>
				<td>{{ usuario.apodo }}</td>
			</tr>
			<tr>
				<th style="width: 10%">Correo</th>
				<td>{{ usuario.correo }}</td>
			</tr>
			<tr>
				<th style="width: 10%">Cursos</th>
				<td>
					{% for curso in cursos %}
						<table class="col-lg-12">
							<tr><td>{{ curso.curso.titulo }}</td>
							<td style="width: 5%">
								<a href="{{ path("curso_unsuscribe", {"id":curso.id}) }}" data-toggle="tooltip" title="Abandonar curso" class="glyphicon glyphicon-thumbs-down" style="font-size:25px;"></a>
							</td></tr>
						</table>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<td>
					<a href="{{ path("persona_edit", {"id":persona.id}) }}" class="btn btn-warning"> Modificar Perfil </a>
				</td>
				<td>
					<a href="{{ path("persona_delete", {"id":persona.id}) }}" class="btn btn-danger"> Eliminar Cuenta </a>
				</td>
			</tr>
		</table>
	</div>
	<div class="clearfix"></div>
{% endblock %}