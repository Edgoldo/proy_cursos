{% extends "CursosBundle::layout.html.twig" %}

{% block content %}
	<h3> Perfil de Persona</h3>
	<hr/>
	<div class="col-lg-6">
		{% for message in app.session.flashbag().get('status') %}
			<div class="alert alert-success"> {{ message }} </div>
		{% endfor %}
		<table class="table table-hover table-bordered">
			<tr>
				<th>Nombre</th>
				<td>{{ persona.nombre }}</td>
			</tr>
			<tr>
				<th>Apellido</th>
				<td>{{ persona.apellido }}</td>
			</tr>
			<tr>
				<th>Direcci√≥n</th>
				<td>{{ persona.direccion }}</td>
			</tr>
			<tr>
				<th>Telefono</th>
				<td>{{ telefono.numero }}</td>
			</tr>
			<tr>
				<th>Apodo</th>
				<td>{{ usuario.apodo }}</td>
			</tr>
			<tr>
				<th>Correo</th>
				<td>{{ usuario.correo }}</td>
			</tr>
			<tr>
				<td>
					<a href="{{ path("persona_edit", {"id":persona.id}) }}" class="btn btn-warning"> Modificar Perfil </a>
				</td>
				<td>
					<a href="{{ path("persona_delete", {"id":persona.id}) }}" class="btn btn-danger"> Eliminar Cuenta </a>
				</td>
			</tr>
		</table>
	</div>
	<div class="clearfix"></div>
{% endblock %}